{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-w",
                "-g",
                "-I/home/jim/vcpkg/installed/x64-linux/include",
                "-L/home/jim/vcpkg/installed/x64-linux/lib",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/GameState/*.cpp",
                "${workspaceFolder}/src/GameState/Entities/*.cpp",
                "${workspaceFolder}/src/Maths/*.cpp",
                "${workspaceFolder}/src/Platform/SDL2/*.cpp",
                "${workspaceFolder}/src/Rendering/*.cpp",
                "${workspaceFolder}/src/Utilities/*.cpp",
                "${workspaceFolder}/src/VGui/*.cpp",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf",
                "-ltmxparser",
                "-lz",
                "-ltinyxml2",
                "-o",
                "${workspaceFolder}/bin/gin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}